<%- include("layout", { title: "Dashboard", user, body: `
  <h1>Dashboard</h1>

  <div class="grid">
    <div class="stat"><div class="k">Orang Tua</div><div class="v">${stats.parents}</div></div>
    <div class="stat"><div class="k">Balita</div><div class="v">${stats.children}</div></div>
    <div class="stat"><div class="k">Jadwal</div><div class="v">${stats.schedules}</div></div>
    <div class="stat"><div class="k">Notif Pending</div><div class="v">${stats.pendingNotif}</div></div>
  </div>

  <div class="card">
    <h2>Jadwal Terdekat</h2>
    <table>
      <thead><tr><th>Tanggal</th><th>Balita</th><th>Orang Tua</th><th>Imunisasi</th><th>Status</th></tr></thead>
      <tbody>
        ${upcoming.map(r => `
          <tr>
            <td>${r.scheduled_at}</td>
            <td>${r.child_name}</td>
            <td>${r.parent_name}</td>
            <td>${r.imun_name}</td>
            <td>${r.status}</td>
          </tr>
        `).join("")}
      </tbody>
    </table>
    <p class="muted">Scheduler jalan otomatis tiap 1 menit untuk mengirim notifikasi yang due.</p>
  </div>
` }) %>