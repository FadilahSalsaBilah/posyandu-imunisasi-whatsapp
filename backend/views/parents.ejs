<%- include("layout", { title: "Orang Tua", user, body: `
  <h1>Data Orang Tua</h1>

  <div class="card">
    <h2>Tambah Orang Tua</h2>
    <form method="post" action="/parents" class="form">
      <label>Nama</label><input name="name" required />
      <label>No. WhatsApp (62xxxx)</label><input name="phone" required placeholder="62812xxxxxxx" />
      <label>Alamat</label><input name="address" />
      <label class="row">
        <input type="checkbox" name="consent" checked /> Consent terima notifikasi
      </label>
      <button type="submit">Simpan</button>
    </form>
  </div>

  <div class="card">
    <h2>Daftar Orang Tua</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nama</th>
          <th>WA</th>
          <th>Consent</th>
          <th>Alamat</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        ${parents.map(p => `
          <tr>
            <td>${p.id}</td>
            <td>${p.name}</td>
            <td>${p.phone}</td>
            <td>${p.consent ? "Ya" : "Tidak"}</td>
            <td>${p.address || ""}</td>
            <td>
              <form method="post" action="/parents/${p.id}/delete"
                    onsubmit="return confirm('Yakin hapus orang tua ini? Semua balita, jadwal, dan notifikasi ikut terhapus.');"
                    style="display:inline;">
                <button type="submit" class="btn btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
        `).join("")}
      </tbody>
    </table>
  </div>
` }) %>
