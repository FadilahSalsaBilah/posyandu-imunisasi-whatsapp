<%- include("layout", { title: "Balita", user, body: `
  <h1>Data Balita</h1>

  <div class="card">
    <h2>Tambah Balita</h2>
    <form method="post" action="/children" class="form">
      <label>Orang Tua</label>
      <select name="parent_id" required>
        ${parents.map(p => `<option value="${p.id}">${p.name}</option>`).join("")}
      </select>
      <label>Nama Balita</label><input name="name" required />
      <label>Tgl Lahir (opsional)</label><input name="dob" placeholder="YYYY-MM-DD" />
      <label>Gender (opsional)</label><input name="gender" placeholder="L/P" />
      <button type="submit">Simpan</button>
    </form>
  </div>

  <div class="card">
    <h2>Daftar Balita</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nama Balita</th>
          <th>Orang Tua</th>
          <th>DOB</th>
          <th>Gender</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        ${children.map(c => `
          <tr>
            <td>${c.id}</td>
            <td>${c.name}</td>
            <td>${c.parent_name}</td>
            <td>${c.dob || ""}</td>
            <td>${c.gender || ""}</td>
            <td>
              <form method="post" action="/children/${c.id}/delete"
                    onsubmit="return confirm('Yakin hapus data balita ini? Semua jadwal & notifikasi ikut terhapus.');"
                    style="display:inline;">
                <button type="submit" class="btn btn-danger">Hapus</button>
              </form>
            </td>
          </tr>
        `).join("")}
      </tbody>
    </table>
  </div>
` }) %>
